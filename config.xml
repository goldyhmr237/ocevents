<gap:plugin name="cordova-plugin-camera" source="pgb"  />
<gap:plugin name="cordova-plugin-file" source="pgb"  />
<gap:plugin name="cordova-plugin-customurlscheme" source="npm">
  <param name="URL_SCHEME" value="ocevents" />
</gap:plugin>

<gap:plugin name="com.hutchind.cordova.plugins.streamingmedia" spec="0.1.3" source="pgb" />
<gap:plugin name="cordova-plugin-file-transfer" source="pgb"  />
<gap:plugin name="cordova-plugin-dialogs" source="pgb"  />
<gap:plugin name="cordova-plugin-media-capture" source="pgb"  />

<gap:plugin name="cordova-plugin-splashscreen" source="pgb"  />
<gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.8.0">
     <param name="APP_ID" value="1419525454987223" />
     <param name="APP_NAME" value="EVENTMANAGER" />
</gap:plugin>    
<gap:config-file platform="ios" parent="UIStatusBarHidden">
    <true/>
</gap:config-file>

<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="icons/screen.png" density="land-hdpi"/>
    <splash src="icons/screen.png" density="land-ldpi"/>
    <splash src="icons/screen.png" density="land-mdpi"/>
    <splash src="icons/screen.png" density="land-xhdpi"/>

    <splash src="icons/screen.png" density="port-hdpi"/>
    <splash src="icons/screen.png" density="port-ldpi"/>
    <splash src="icons/screen.png" density="port-mdpi"/>
    <splash src="icons/screen.png" density="port-xhdpi"/>
</platform>

<platform name="ios">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="icons/screen.png" width="320" height="480"/>
    <splash src="icons/screen.png" width="640" height="960"/>
    <splash src="icons/screen.png" width="768" height="1024"/>
    <splash src="icons/screen.png" width="1536" height="2048"/>
    <splash src="icons/screen.png" width="1024" height="768"/>
    <splash src="icons/screen.png" width="2048" height="1536"/>
    <splash src="icons/screen.png" width="640" height="1136"/>
    <splash src="icons/screen.png" width="750" height="1334"/>
    <splash src="icons/screen.png" width="1242" height="2208"/>
    <splash src="icons/screen.png" width="2208" height="1242"/>
</platform>

<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
    <false/>
</gap:config-file>
 <preference name="AllowInlineMediaPlayback" value="true" /> 
 <preference name="DisallowOverscroll" value="true" />
 <preference name="SplashScreen" value="screen" />  
</widget>

